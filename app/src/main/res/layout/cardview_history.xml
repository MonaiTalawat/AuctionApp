<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_for_cardview_history"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/layout_border"
    android:backgroundTint="@drawable/layout_border">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewForHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="395dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <ImageView
        android:id="@+id/imageHistory"
        android:layout_width="185dp"
        android:layout_height="102dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tabian5" />

    <TextView
        android:id="@+id/textLicenseCar"
        android:layout_width="155dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="เลขทะเบียน กอ 9999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="155dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:text="สิ้นสุดการประมูลเมื่อวันที่"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLicenseCar" />

    <TextView
        android:id="@+id/finalDateAuction"
        android:layout_width="155dp"
        android:layout_height="23dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:text="9 ตุลาคม 2561"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/finalPrice"
        android:layout_width="155dp"
        android:layout_height="23dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:text="ปิดประมูลที่ราคา 45000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalDateAuction" />

    <TextView
        android:id="@+id/userWinner"
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:text="ผู้ชนะคือ นาย ก"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalPrice" />
</android.support.constraint.ConstraintLayout>